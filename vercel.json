{
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "no-referrer"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": "(?i).*mozilla.*"
        }
      ],
      "destination": "/api/blocked"
    }
  ]
}